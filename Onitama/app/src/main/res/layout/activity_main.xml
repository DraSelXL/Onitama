<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E2C1"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingTop="150dp"
    android:paddingRight="30dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/amarante"
        android:text="ONITAMA"
        android:textAlignment="center"
        android:textColor="#575012"
        android:textSize="60sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="70dp"
        android:backgroundTint="#575012"
        android:text="play" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Created By:\nAngelita Jesslyn / 220116905\nCherilyn Eugenia / 220116908\nIan Nathaneil William / 220116918"
        android:textAlignment="center"
        android:textStyle="bold" />
</LinearLayout>